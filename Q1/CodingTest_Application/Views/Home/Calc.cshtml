<style>
    .container li {
        padding: 5px;
        margin: 5px;
        list-style-type: none
    }
</style>

<div class="container">
    <form id="form">
        <ul>
            <li>
                <label for="X-text">X</label><span class="text-danger">* : </span>
                <input type="text" id="X-text" name="x" required />
            </li>
            <li>
                <label for="Y-text">Y</label><span class="text-danger">* : </span>
                <input type="text" id="Y-text" name="y" required />
            </li>
            <li>
                <label for="options">Options</label><span class="text-danger">* : </span>
                <select id="options" name="param" required>
                    <option value="">Select-Options</option>
                    <option value="Add">Add</option>
                    <option value="Multiply">Multiply</option>
                </select>
            </li>
            <li>
                <input type="button" value="Submit" onclick="Submit()" />
                <input type="reset" value="Reset" />
            </li>
            <li>
                <label for="result">Result : </label>
                <input type="text" id="result" />
            </li>
        </ul>
    </form>
</div>

<script>
    function Submit() {
        var isFormValid = true;
        $('#form input:required').each(function () {
            if ($(this).val() === '') {
                isFormValid = false;
            }
            if ($('#options').val() === '') {
                isFormValid = false;
            }
        });

        if (isFormValid) {
            var param = $('#options').val();
            var x = $('#X-text').val();
            var y = $('#Y-text').val();

            $.ajax({
                url: "/Home/Submit",
                data: { param: param, x: x, y: y },
                type: "GET",
                success: function (response) {
                    $('#result').val(response);
                },
                error: function () {
                    alert('Error!')
                }
            });
        } else {
            alert('Please fill all the mandatory fields');
            return false;
        }
    }    
</script>