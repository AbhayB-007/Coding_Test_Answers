@{
}

<style>
    .container li {
        padding: 5px;
        margin: 5px;
        list-style-type: none
    }
</style>

<div class="container">
    <form asp-controller="Home" asp-action="Submit">

        <ul>
            <li>
                <label for="X-text">X : </label>
                <input type="text" id="X-text" name="x" value="@ViewBag.X" required />
            </li>
            <li>
                <label for="Y-text">Y : </label>
                <input type="text" id="Y-text" name="y" value="@ViewBag.Y" required />
            </li>
            <li>
                <label for="options">Options : </label>
                <select id="options" name="param" required>
                    <option value="">Select-Options</option>
                    <option value="Add">Add</option>
                    <option value="Multiply">Multiply</option>
                </select>
            </li>
            <li>
                <input type="submit" value="Submit" />                
            </li>
            <li>
                <label for="result">Result : </label>
                <input type="text" id="result" value="@ViewBag.Result" />
            </li>
        </ul>
    </form>
</div>              