        function Submit() {
            debugger;
            var isFormValid = true;
            $('#form input:required').each(function () {
                if ($(this).val() === '') {
                    isFormValid = false;
                }
                if ($('#options').val() === '') {
                    isFormValid = false;
                }
            });

            if (isFormValid) {
                var param = $('#options').val();
                var x = $('#X-text').val();
                var y = $('#Y-text').val();

                $.ajax({
                    url: "/Home/Submit",
                    data: { param: param, x: x, y: y },
                    type: "POST",
                    success: function (response) {
                        debugger;
                        console.log(response);
                        alert('Sent Successfully!');
                        $('#result').val(response);
                    },
                    error: function () {
                        alert('Error!')
                    }
                });
            } else {
                alert('Please fill all the mandatory fields');
                return false;
            }
        }

    function Reset() {
        window.location.href = "/Home/Calc";
    }
</script>